class <%= app_class %> < LucidApp::Base
  render do
    Router(hook: Preact.location_hook(props.location)) do
      Switch do
        Route(path: '/', exact: true, component: HelloComponent.JS[:preact_component])
        Route(path: '/welcome', exact: true, component: WelcomeComponent.JS[:preact_component])
        Route(component: NotFound404Component.JS[:preact_component])
      end
    end
  end
end