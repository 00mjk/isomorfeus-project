source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

<%= rack_server_gems %>

gem 'tilt', '~> 2.0.10'
gem 'roda', '~> 3.47.0'
gem 'opal', github: 'janbiedermann/opal', branch: 'es6_modules_1_2'

gem 'isomorfeus', <%= isomorfeus_version %>

group :development do
  gem 'pry', '~> 0.14.1'
  gem 'pry-rescue'
  gem 'pry-stack_explorer'
end

group :test do
  gem 'rspec', '~> 3.8.0'
  gem 'isomorfeus-puppetmaster', '>= 0.5.1'
end
